package com.sophossolutions.pages;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import com.sophossolutions.actions.Action;

import net.serenitybdd.core.pages.PageObject;
import net.thucydides.core.annotations.DefaultUrl;

@DefaultUrl("https://www.linio.com.co")
public class LinioHome extends PageObject {
	
	WebDriver driver;
	
	//Elementos para la busqueda del producto
	By byTextoBuscar = By.xpath("//div[@class='input-group-search']//input[@name='q']");
	By byBtnBuscar = By.xpath("//button[contains(@class,'btn-search')]");
	//Elementos para seleccionar el mejor calificado
	By byResultados = By.xpath("//div[contains(@class,'switchable')]");
	
	//Buscar productos
	public void buscarProducto(String strProducto) {
		Action.buscarProducto(getDriver(), byTextoBuscar, byBtnBuscar, strProducto);
	}
	
	//Seleccionar el mejor calificado
	public void seleccionarMejorCalificado() {
		
		WebElement selectResultados = getDriver().findElement(byResultados);
		List<WebElement> resultados = getDriver().findElements(byResultados); 
	}
	
	
}
